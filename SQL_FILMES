SELECT MIN(DURACAO_MINUTOS) FROM ENTRETERIMENTO WHERE 1; 
SELECT MAX(DURACAO_MINUTOS) FROM ENTRETERIMENTO WHERE 1; 
SELECT MIN(DURACAO_MINUTOS) FROM ENTRETERIMENTO WHERE 1; 

SELECT TIPO, NOME,DURACAO_MINUTOS FROM ENTRETERIMENTO WHERE DURACAO_MINUTOS = (SELECT MAX(DURACAO_MINUTOS) FROM ENTRETERIMENTO);
SELECT TIPO, NOME,DURACAO_MINUTOS FROM ENTRETERIMENTO WHERE DURACAO_MINUTOS = (SELECT MIN(DURACAO_MINUTOS) FROM ENTRETERIMENTO);

SELECT COUNT (TIPO) FROM ENTRETERIMENTO WHERE TIPO = 'SERIE';
SELECT COUNT (TIPO) FROM ENTRETERIMENTO WHERE TIPO = 'FILME';

SELECT AVG (DURACAO_MINUTOS) FROM ENTRETERIMENTO WHERE TIPO = 'SERIE';

SELECT SUM(DURACAO_MINUTOS) AS SOMA_DE_DURACAO_DOS_FILMES_DO_BRAD_PITT FROM ENTRETERIMENTO WHERE ATOR_PRINCIPAL = 'Brad Pitt ';
